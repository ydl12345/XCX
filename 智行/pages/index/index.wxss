/**index.wxss**/
.slide-image{  
    width: 100%;  
    height: 100px;
} 
swiper{
    width: 100%;
    height: 100px;
}
page{
    background-color: #f4f4f4;
}

.contain{
  background-color:#fff;
  border-radius: 10rpx;
  margin: 10rpx 20rpx 40rpx;
  height: 300px;
}
.contain .navbg{
  display: flex;
  justify-content: space-between;
  height: 40px;
  line-height: 40px;

  text-align: center;
  color: #fff;
}
.select{
  background-color: #fff;
  color: #000;
  width: 50%;
  border-radius: 10rpx;
 
}
.normal{
  background-color: #898989;
  color: #fff;
  width: 50%;
  border-radius: 10rpx;
 
}
.area,.section,.body-view{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 20rpx 0;
  border-bottom:  1px solid #f4f4f4;
  text-align: center;
}
.area image{
  width: 60px;
  height: 40px;
}
.area .city,.body-view text{
  margin-top: 10px;
}
.section{
 padding:40rpx 0;
}
.body-view{
  padding: 30rpx 0;
}
.switch {
  vertical-align: middle
}
.btn{
  height: 50px;
  background-color: #5495e5;
  margin: 0 30rpx;
  color: #fff;
  border-radius: 10rpx;
  line-height: 50px;
  text-align: center;
}
.others{
  color: #888;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  line-height: 40px;
  padding: 0 20rpx;
}
.imgs{
  display: flex;
  justify-content: space-around;
  height: 50px;

}
.imgs image{
  width: 40px;
  height: 40px;
  align-self: flex-end;
}
